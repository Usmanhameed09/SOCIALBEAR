{
  "manifest_version": 3,
  "name": "Sprout Social AI Moderator",
  "version": "1.0.0",
  "description": "AI-powered content moderation for Sprout Social Inbox. Auto-classifies and hides harmful content.",
  "permissions": ["storage", "activeTab", "sidePanel", "tabs"],
  "host_permissions": ["https://app.sproutsocial.com/*"],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://app.sproutsocial.com/*"],
      "js": [
        "src/content/state.js",
        "src/content/persistence.js",
        "src/content/config.js",
        "src/content/dom.js",
        "src/content/ui.js",
        "src/content/actions.js",
        "src/content/moderation.js",
        "src/content/scanner.js",
        "src/content/index.js"
      ],
      "css": ["src/content.css"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "src/sidepanel.html"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
